{
  "name": "@zendesk/sell-zaf-app-toolbox",
  "version": "2.0.2",
  "description": "A package for developers that streamlines the building of Zendesk App Framework apps for Sell",
  "main": "./dist/main.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./dist",
    "lint": "tslint --project tsconfig.json --fix",
    "build": "npm run clean && NODE_ENV=production webpack -p",
    "start": "webpack -w --env development",
    "test": "jest --env=jsdom",
    "test-coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zendesk/sell-zaf-app-toolbox.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zendesk/sell-zaf-app-toolbox/issues"
  },
  "homepage": "https://github.com/zendesk/sell-zaf-app-toolbox#readme",
  "dependencies": {
    "memoize-one": "^5.2.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.12",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^24.9.1",
    "@types/react": "^18.0.23",
    "@types/react-dom": "^18.0.7",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.3.0",
    "ts-loader": "6.2.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-origin-ordered-imports-rule": "^1.2.2",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react": "^4.1.0",
    "tslint-react-hooks": "^2.2.2",
    "typescript": "^3.9.10",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12"
  },
  "jest": {
    "verbose": false,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "globals": {
      "API_URL": "idealwith",
      "DEVELOPMENT": false
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)(spec|test).ts?(x)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@zendeskgarden)/)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "keywords": []
}
